{
  // "include": ["**/*.ts"],
  "include": ["src/"],
  "compilerOptions": {
    "lib": ["ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "skipLibCheck": true,

    // Remix takes care of building everything in `remix build`.
    // "noEmit": true,
    "rootDir": "src",
    "outDir": "dist"
  }
}
